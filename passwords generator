import random
import string

def generate_username(length, add_numbers=False, add_special_chars=False):
    characters = string.ascii_letters
    if add_numbers:
        characters += string.digits
    if add_special_chars:
        characters += string.punctuation
    
   username = ''.join(random.choice(characters) for _ in range(length))
    return username

def main():
    print("Welcome to the username  Generator!")
    length = int(input("Enter the length of the username: "))
    add_numbers = input("Include numbers? (y/n): ").lower() == 'y'
    add_special_chars = input("Include special characters? (y/n): ").lower() == 'y'
    
    username = generate_username(length, add_numbers, add_special_chars)
    print(f"Generated username: {username}")

if __name__ == "__main__":
    main()
