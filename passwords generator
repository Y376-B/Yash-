import random
import string

def generate_password(length, add_numbers=False, add_special_chars=False):
    characters = string.ascii_letters
    if add_numbers:
        characters += string.digits
    if add_special_chars:
        characters += string.punctuation
    
    password = ''.join(random.choice(characters) for _ in range(length))
    return password

def main():
    print("Welcome to the Password Generator!")
    length = int(input("Enter the length of the password: "))
    add_numbers = input("Include numbers? (y/n): ").lower() == 'y'
    add_special_chars = input("Include special characters? (y/n): ").lower() == 'y'
    
    password = generate_password(length, add_numbers, add_special_chars)
    print(f"Generated Password: {password}")

if __name__ == "__main__":
    main()
